<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/task_profile_image"
        android:text="Consultant Wang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/consulant"
        android:layout_alignParentLeft="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/task_profile_name"
        android:text="Consultant Wang"
        android:layout_width="200dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        app:layout_constraintLeft_toRightOf="@id/task_profile_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:text="New Task"
        android:layout_marginRight="10dp"
        android:id="@+id/task_new"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@id/check_task_detail"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:background="#33B5E5"
        />
    <Button
        android:text="Check"
        android:id="@+id/check_task_detail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:background="#33B5E5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>