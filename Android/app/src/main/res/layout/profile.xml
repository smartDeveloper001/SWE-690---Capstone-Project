<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond">
    <FrameLayout
        android:id="@+id/layout_pic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <LinearLayout
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#0000FF"
            android:layout_width="300dp"
            android:layout_height="200dp">
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:id="@+id/my_id"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/persion_info"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="个人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/lock_logo"
                android:layout_alignParentLeft="true"
                android:src="@drawable/lock_secure_security_password"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/lock_logo"
                android:text="密码："
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/change_pwd"
                android:layout_toLeftOf="@id/right_arrow_1"
                android:text="修改"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/right_arrow_1"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/finish_course_logo"
                android:layout_alignParentLeft="true"
                android:src="@drawable/consulant"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/finish_course_logo"
                android:text="我的详情："
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/change_home"
                android:layout_toLeftOf="@id/right_arrow_3"
                android:text="修改"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/right_arrow_3"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/consultant_logo"
                android:layout_alignParentLeft="true"
                android:src="@drawable/consulant"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/consultant_logo"
                android:text="你的顾问："
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_consultant"
                android:layout_toLeftOf="@id/right_arrow_2"
                android:text="my consultant"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/right_arrow_2"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/persion_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="其它"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/help"
                android:layout_alignParentLeft="true"
                android:src="@drawable/lock_secure_security_password"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/help"
                android:text="寻求协助："
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@id/right_arrow_4"
                android:text="给罗老师发信"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/right_arrow_4"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/version_logo"
                android:layout_alignParentLeft="true"
                android:src="@drawable/version"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/version_logo"
                android:text="版本信息："
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@id/right_arrow_5"
                android:text="v1"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/right_arrow_5"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>